# Financial Planning System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Project Configuration
# ============================================================================
ENVIRONMENT=development
DEBUG=true
TESTING=false

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=financial_planning
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# For development, you can use a local PostgreSQL URL
DATABASE_URL=postgresql+asyncpg://postgres:changeme_secure_password@localhost:5432/financial_planning

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Application Ports
# ============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MIN_PASSWORD_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# ============================================================================
# CORS and Allowed Hosts
# ============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]

# ============================================================================
# External API Configuration
# ============================================================================
# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key
IEX_CLOUD_API_KEY=your-iex-cloud-key

# Banking Integration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# ============================================================================
# Background Tasks & Celery
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# Monitoring & Flower
# ============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=changeme_flower_password

# ============================================================================
# Monitoring and Logging
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here-optional
ENABLE_METRICS=true

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-email-username
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
FROM_EMAIL=noreply@yourfinancialplanner.com

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Simulation Configuration
# ============================================================================
DEFAULT_MONTE_CARLO_ITERATIONS=50000
MAX_MONTE_CARLO_ITERATIONS=100000
SIMULATION_TIMEOUT_SECONDS=300
MAX_CONCURRENT_SIMULATIONS=10

# ============================================================================
# PDF Export Configuration
# ============================================================================
PDF_TEMPLATE_DIR=templates/pdf
PDF_OUTPUT_DIR=exports/pdf
MAX_PDF_SIZE_MB=10

# ============================================================================
# Audit and Compliance
# ============================================================================
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_DISCLAIMER="Simulations are estimates, not guarantees. Past performance does not predict future results."
REQUIRED_DISCLAIMERS=["Simulations are estimates, not guarantees."]