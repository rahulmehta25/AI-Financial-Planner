# Environment Configuration for Financial Planning API
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Financial Planning API"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# Security
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (PostgreSQL)
# For Railway: Use the DATABASE_URL provided by Railway
DATABASE_URL="postgresql://user:password@host:port/database"

# Redis (Optional - for caching)
# Leave empty if not using Redis
REDIS_URL=""

# CORS Settings
CORS_ORIGINS='["http://localhost:3000","https://your-frontend-domain.vercel.app"]'

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL="INFO"

# Market Data Settings
MARKET_DATA_CACHE_TTL=900  # 15 minutes in seconds
HISTORICAL_DATA_CACHE_TTL=3600  # 1 hour in seconds

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION="yfinance.exceptions"