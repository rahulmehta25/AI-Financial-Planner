# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/financial_planning
TEST_DATABASE_URL=postgresql://user:password@localhost/financial_planning_test

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI System Settings
AI_NARRATIVE_TEMPERATURE=0.3
AI_SUMMARY_TEMPERATURE=0.2
AI_MAX_INPUT_TOKENS=4000
AI_MAX_OUTPUT_TOKENS=2000
AI_ENABLE_CONTENT_FILTERING=true
AI_ENABLE_PROMPT_VALIDATION=true
AI_ENABLE_OUTPUT_VALIDATION=true
AI_ENABLE_RESPONSE_CACHING=true
AI_CACHE_TTL_SECONDS=3600
AI_ENABLE_AB_TESTING=true
AI_AB_TEST_PERCENTAGE=0.1
AI_ENABLE_AUDIT_LOGGING=true
AI_AUDIT_LOG_PATH=/var/log/financial_ai/audit.log

# OpenAI Settings
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Settings
ANTHROPIC_MODEL=claude-3-opus-20240229

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Market Data API Keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FRED_API_KEY=your-fred-api-key
QUANDL_API_KEY=your-quandl-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Settings
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# File Storage
UPLOAD_DIR=/tmp/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/financial_planning/app.log

# Feature Flags
ENABLE_AI_NARRATIVES=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_COMPLIANCE_MODE=true
ENABLE_FALLBACK_NARRATIVES=true

# Supported Languages
SUPPORTED_LANGUAGES=en,es,zh
DEFAULT_LANGUAGE=en