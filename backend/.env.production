# AI Financial Planning System - Production Configuration

# Project Configuration
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=1

# CORS Configuration
BACKEND_CORS_ORIGINS=["https://ai-financial-planner-zeta.vercel.app","https://ai-financial-planner-*.vercel.app","*"]
ALLOWED_HOSTS=["*"]

# Database Configuration (SQLite for simplicity)
DATABASE_URL=sqlite+aiosqlite:///./financial_planning.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration (Optional - can use memory cache for simple deployment)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration - CHANGE THESE IN PRODUCTION!
SECRET_KEY=ai-financial-planner-super-secret-key-change-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
MIN_PASSWORD_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000

# Simulation Configuration
DEFAULT_MONTE_CARLO_ITERATIONS=25000
MAX_MONTE_CARLO_ITERATIONS=50000
SIMULATION_TIMEOUT_SECONDS=180
MAX_CONCURRENT_SIMULATIONS=5

# AI/LLM Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=1500
LLM_TEMPERATURE=0.7

# Capital Market Assumptions
DEFAULT_CMA_VERSION=2024.1
CMA_UPDATE_FREQUENCY_DAYS=90

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_DISCLAIMER="Simulations are estimates, not guarantees."
REQUIRED_DISCLAIMERS=["Simulations are estimates, not guarantees."]

# PDF Export Configuration
PDF_TEMPLATE_DIR=templates/pdf
PDF_OUTPUT_DIR=exports/pdf
MAX_PDF_SIZE_MB=10

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
SENTRY_DSN=
ENABLE_METRICS=true

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@financialplanner.com

# Background Tasks (Disabled for simple deployment)
ENABLE_BACKGROUND_TASKS=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0