# =============================================================================
# AI Financial Planning System - Frontend Environment Configuration
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=AI Financial Planning System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# Vercel Analytics (if deploying to Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Chart.js license key (if using paid version)
NEXT_PUBLIC_CHARTJS_LICENSE=your_chartjs_license

# TradingView widgets (if using)
NEXT_PUBLIC_TRADINGVIEW_API_KEY=your_tradingview_api_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_DATA=true
NEXT_PUBLIC_ENABLE_ADVANCED_CHARTS=true
NEXT_PUBLIC_ENABLE_EXPORT_FEATURES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Storybook
STORYBOOK_THEME=light

# Next.js
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce

# =============================================================================
# PERFORMANCE
# =============================================================================
# Enable/disable service worker
NEXT_PUBLIC_ENABLE_SW=false

# API request timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# =============================================================================
# MAP SERVICES (if needed for location-based features)
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token